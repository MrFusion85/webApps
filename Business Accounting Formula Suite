JavaScript:

// Created by Charlie Mitchell
// Assistance from bobbie & Richard Myatt
// Copyright 2018, 2025


// basic accounting equation

function bae(bael, baee) {
    var bael = document.getElementById('bael').value;
    var baee = document.getElementById('baee').value;
    var baea = +bael + +baee;
    alert("Your total amount of assets = $" + baea);
    }

// net income equation

function nie(nier, niee) {
    var nier = document.getElementById('nier').value;
    var niee = document.getElementById('niee').value;
    var niei = +nier - +niee;
    alert("Your net income is = $" + niei);
    }

// break-even point equation

function bep(bepf, bepp, bepc) {
    var bepf = document.getElementById('bepf').value;
    var bepp = document.getElementById('bepp').value;
    var bepc = document.getElementById('bepc').value;
    var bepb = +bepf / (+bepp - +bepc);
    alert("Your break-even point is " + bepb + "units.");
    }

// cash ratio equation

function cre(crec, crel) {
    var crec = document.getElementById('crec').value;
    var crel = document.getElementById('crel').value;
    var crex = +crec / +crel;
    var crer = +crex * 100
    alert("Your current cash ratio is = " + crer + "%");
    }
    
// profit margin equation

function pme(pmei, pmes) {
    var pmei = document.getElementById('pmei').value;
    var pmes = document.getElementById('pmes').value;
    var pmem = +pmei / +pmes;
    alert("Your profit margin is $" + pmem + " per unit.");
    }

// COGS

function cogs(cogsb, cogsp, cogse) {
    var cogsb = document.getElementById('cogsb').value;
    var cogsp = document.getElementById('cogsp').value;
    var cogse = document.getElementById('cogse').value;
    var cogsx = +cogsb + +cogsp - +cogse;
    alert("Your cost of goods sold is $" + cogsx);
    }

// debt-to-equity ratio

function dter(dterl, dtere) {
    var dterl = document.getElementById('dterl').value;
    var dtere = document.getElementById('dtere').value;
    var dterx = +dterl / +dtere;
    var dterr = +dterx * 100;
    alert("Your current debt-to-equity ratio is " + dterr + "%");
    }

// simple interest calculator

function sic(sicp, sicr, sict) {
    var sicp = document.getElementById('sicp').value;
    var sicr = document.getElementById('sicr').value;
    var sict = document.getElementById('sict').value;
    var sica = +sicp * (1 + (+sicr * +sict));
    alert("Your principle contribution of $" + sicp + ", will grow to $" + sica + " after " + sict + " years.");
    }

// compound interest calculator

function cic(cicp, cicr, cicn, cict) {
    var cicp = document.getElementById('cicp').value;
    var cicr = document.getElementById('cicr').value;
    var cicn = document.getElementById('cicn').value;
    var cict = document.getElementById('cict').value;
    var cicx = +cicp * ((1 + (+cicr / +cicn)) ** (+cicn * +cict));
    var cicb = +cicx * 100
    var cicc = Math.round(+cicb)
    var cica = +cicc / 100
    alert("Your principle contribution of $" + cicp + ", will grow to $" + cica + " after " + cict + " years.");
    }

-->
